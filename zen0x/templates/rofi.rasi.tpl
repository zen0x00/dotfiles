* {
    background:              {{ bg0 }};
    background-alt:          {{ bg1 }};
    foreground:              {{ fg0 }};
    foreground-alt:          {{ fg1 }};

    selected-background:     {{ bg3 }};
    selected-foreground:     {{ bg0 }};

    active-background:       {{ accent }};
    active-foreground:       {{ bg0 }};

    urgent-background:       {{ red }};
    urgent-foreground:       {{ bg0 }};

    border-color:            {{ bg0 }};
    separator-color:         {{ fg2 }};

    inputbar-background:     {{ bg0 }};
    inputbar-foreground:     {{ fg0 }};

    element-background:      transparent;
    element-foreground:      {{ fg0 }};

    element-selected-background: {{ bg3 }};
    element-selected-foreground: {{ bg0 }};

    element-active-background:   {{ accent }};
    element-active-foreground:   {{ bg0 }};

    element-urgent-background:   {{ red }};
    element-urgent-foreground:   {{ bg0 }};
}
