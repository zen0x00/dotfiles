/* =========================
   Background scale
   ========================= */

@define-color bg        {{ bg0 }};
@define-color bg_alt    {{ bg1 }};
@define-color bg_module {{ bg2 }};
@define-color bg_hover  {{ bg3 }};
@define-color bg_active {{ bg4 }};

/* =========================
   Foreground scale
   ========================= */

@define-color fg        {{ fg0 }};
@define-color fg_dim    {{ fg1 }};
@define-color fg_muted  {{ fg2 }};

/* =========================
   Semantic colors
   ========================= */

@define-color accent    {{ accent }};
@define-color red       {{ red }};
@define-color green     {{ green }};
@define-color blue      {{ blue }};
@define-color teal      {{ cyan }};
@define-color purple    {{ purple }};
@define-color yellow    {{ yellow }};
